package game.architecture.components;

import game.architecture.engine.ServiceLocator;
import game.architecture.systems.PhysicsSystem;

public class Physics extends Component implements Pose {

	
	// TODO: make vector class
	private float xPos;
	private float yPos;
	private float zPos;
	
	public Physics(){
		
	}
	
	@Override
	public void Update() {
		// TODO Auto-generated method stub

	}

	@Override
	public float GetXPos() {
		return xPos;
	}

	@Override
	public float GetZPos() {
		return zPos;
	}

	@Override
	public float GetYPos() {
		return yPos;
	}

	@Override
	public void SetXPos(float x) {
		xPos = x;
	}

	@Override
	public void SetZPos(float z) {
		zPos = z;
	}

	@Override
	public void SetYPos(float y) {
		yPos = y;
	}

	@Override
	public void AddToService() {
		ServiceLocator.GetService(PhysicsSystem.class).Add(this);		
	}

}
